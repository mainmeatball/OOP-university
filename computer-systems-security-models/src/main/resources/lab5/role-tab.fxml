<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox fx:controller="org.leti.lab5.controller.tab.RoleTabController"
      xmlns:fx="http://javafx.com/fxml"
      id="top-window"
      prefHeight="300"
      maxWidth="700"
      spacing="10">
    <padding>
        <Insets topRightBottomLeft="10"/>
    </padding>

    <HBox>
        <Label text="New role: "/>
        <TextField fx:id="roleName"/>
        <Button text="New role" onAction="#createNewRole"/>
    </HBox>
    <TableView fx:id="roleTable" prefHeight="300" prefWidth="600" VBox.vgrow="ALWAYS"/>
</VBox>